<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@color/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/idNombre"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:text="Nombre"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/idInfo"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light"
            android:text="DescripciÃ³n"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/idPrice"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light"
            android:text="Precio: "
            android:textSize="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgTool"
                android:background="@drawable/toolicon"
                android:layout_width="20.14dp"
                android:layout_height="20.14dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8.5dp"
                android:layout_marginBottom="20.5dp" />

            <ImageView
                android:id="@+id/imgDelete"
                android:background="@drawable/deleteicon"
                android:layout_width="20.14dp"
                android:layout_height="20.14dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8.5dp"
                android:layout_marginBottom="20.5dp" />
            <ImageView
                android:id="@+id/imgRest"
                android:background="@drawable/imgcomboexample"
                android:layout_width="157.5dp"
                android:layout_height="77.5dp"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="8.5dp"
                android:layout_marginBottom="20.5dp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>